<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ahsanz.whatstheweather.MainActivity"
    android:background="@drawable/backgroundd">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cityname"
        android:textSize="30sp"
        android:textAlignment="center"
        android:hint="City Name"
        android:layout_below="@+id/entercity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:text="Check Another?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/again"
        android:background="@drawable/newbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:onClick="checkAnother"
        android:visibility="invisible" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/results"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:layout_marginTop="81dp"
        android:textAlignment="center"
        android:alpha="0" />

    <Button
        android:text="Whats the\nWeather?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherButton"
        android:onClick="getWeather"
        android:background="@drawable/newbutton"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/cityname"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Enter City Name..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entercity"
        android:textSize="30sp"
        android:layout_alignTop="@+id/results"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
